<div class='flex justify-between items-center'>
  <h1 class='text-2xl font-medium'>Editing detail</h1>
  <div class='flex'>
    <%= button_to person_detail_path(@person, @detail), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure to delete this person\'s detail?'} , class: 'mr-5 border border-red-500 px-4 py-1 text-red-500 cursor-pointer' do %>
      Delete
    <% end %>
    <%= link_to "Back", person_path(@person), { class: 'bg-lime-500 border border-lime-500 px-4 py-1 cursor-pointer text-white' } %>
  </div>
</div>
<%= render "form", detail: @detail, route: "/people/#{@person.id}/details/#{@detail.id}" %>
